#! /bin/sh


# File: /etc/init.d/unicorn_redmine_rnr

### BEGIN INIT INFO
# Provides:          unicorn_redmine_rnr
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts the unicorn web server
# Description:       starts unicorn
### END INIT INFO

set -e

APP_ROOT="<%= scope.lookupvar('unicorn::working_directory') %>"
CMD="unicorn_rails -E production -D -c '<%= scope.lookupvar('unicorn::config') %>'"
NAME=unicorn_redmine_rnr
DESC="Unicorn"
PID="<%= scope.lookupvar('unicorn::pid') %>"
USER=<%= scope.lookupvar('unicorn::owner') %>

set -u

sig() {
    test -s "$PID" && kill -$1 `cat $PID`
}
start() {
    sig 0 && echo >&2 "Already running" && return

    echo -n "Starting $DESC: "
    cd "$APP_ROOT" || exit 1

    su - $USER -c "$CMD"
    echo "$NAME."
}

stop() {
    sig QUIT && return
    echo >&2 "Not running"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        sleep 5s
        start
        ;;
    *)
        echo "Usage: $NAME {start|stop|restart|reload}" >&2
    exit 1
    ;;
esac

exit 0
